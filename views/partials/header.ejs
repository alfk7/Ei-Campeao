<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Favicon -->
    <link rel="shortcut icon" href="/images/logo.png" />

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title><%=title%></title>

</head>

<body class="">
    <header >
        <section class="header amarelo">
            <img src="/images/logo.png" alt="logo">
        </section>
        <section>
            <% if(usuario != undefined){ %>
                <div class="d-flex justify-content-center">
                    <h1>Nome do bar</h1>
                  </div>
                  <div class=" d-flex justify-content-center centro row align-items-center">
                    <img src="/images/default.png" height="70" width="70" alt="Foto do Perfil" class="profile-picture perfilmargem">
                    <ul class="nav nav-pills">
                      <li class="nav-item">
                        <a class="nav-link <%- (active == 'meu restaurante')? 'active' : '' %>" href="/restaurante">Cardapio</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link <%- (active == 'Suas mesas')? 'active' : '' %>" href="/mesas">Mesas</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link <%- (active == 'Vendas')? 'active' : '' %>" href="#">Vendas</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link <%- (active == 'Perfil')? 'active' : '' %>" href="#">Editar perfil</a>
                      </li>
                    </ul>
                  </div>
            <%}%>
        </section>
    </header>