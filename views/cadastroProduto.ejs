<%-include("./partials/header",{active:title})%>
<section class="first">
    <div class="container divInfo">
       

        <div class="row container">
            
            <div class="col-md-9">
                <div class="h3 text-blue text-center mb-3">Cadastro de Produto</div>
                <div class="row">
                    <div class="col border-right">
                        <div class="d-flex justify-content-center">
                            <span class="h3 mb-5 text-blue">Foto</span>
                        </div>
                        <div class="d-flex justify-content-center">
                            <img src="/images/default.png" alt="Foto/Logo" width="200px" height="200px"
                                class="image-preview mb-5" id="image-preview">
                        </div>
                        <div class="d-flex justify-content-center">
                            <label for="image-selector" class="btn btn-site">
                                Selecione Imagem
                                <input class="form-control d-none" type="file" id="image-selector" name="imagem">
                            </label>
                        </div>
                    </div>
                    <div class="col">
                        <form action="/cadastroProduto" method="POST" name="formProduto" id="formProduto">
                            <div id="cadastro-dados">
                                <div class="form-group mb-2">
                                    <input id="nome" class="form-control input-decoration" type="text"
                                        name="nome" placeholder="Nome do Produto" maxlength="100" required>
                                </div>
                                <div class="form-group mb-2">
                                    <input id="marca" class="form-control input-decoration" type="text"
                                        name="marca" placeholder="Marca do Produto" maxlength="100" required>
                                </div>
                                <div class="form-group mb-2">
                                    <textarea name="descricao" id="descricao" class="form-control input-decoration"
                                        rows="5" placeholder="Descrição" type="text" maxlength="200" required></textarea>
                                </div>
                                <div class="d-flex">
                                    <div class="form-group mb-2 mw-75 mr-1">
                                        <input id="estoque" class="form-control input-decoration" type="number" min="0"
                                            name="estoque" placeholder="Quantidade" required>
                                    </div>
                                    <div class="form-group mb-2 mw-75 ml-1">
                                        <input id="preco" class="form-control input-decoration" type="number" step=0.01 min="0"
                                            name="preco" placeholder="Preço" required>
                                    </div>
                                </div>
                                
                                
                                <input class="form-control d-none" type="hidden" name="imagemb64" id="imagemb64"
                                    value="">
                                <div class="botoes" id="botaocadastro">
                                    <button type="submit" id="adicionarProduto" class="btn btn-site mr-5 mb-4 mt-3">Adicionar produto</button>
                                </div>
                            </div>
                            <div class="modal fade" id="image-cropper" data-backdrop="static" tabindex="-1"
                                role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title text-blue" id="staticBackdropLabel">Ajuste da Imagem
                                            </h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div id="canvas">

                                            </div>
                                        </div>

                                        <div class="modal-footer">
                                            <button id="pronto" type="button" class="btn btn-site"
                                                data-dismiss="modal">Pronto</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
</form>
</div>
</div>
</section>
<script
  src="https://code.jquery.com/jquery-3.5.1.min.js"
  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
  crossorigin="anonymous"></script>
<script src="/public/javascripts/cadastro.js"></script>
<%- include('./partials/footer') %>